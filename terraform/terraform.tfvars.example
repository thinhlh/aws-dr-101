# Example Terraform variables file
# Copy this to terraform.tfvars and modify the values as needed

# AWS Regions
primary_region   = "us-east-1"
secondary_region = "us-west-2"

# EC2 Configuration
instance_type = "t3.medium"
key_pair_name = "your-key-pair-name"  # Replace with your actual key pair name

# Project Configuration
project_name = "aws-dr-101"
environment  = "poc"

# Network Configuration
vpc_cidr_primary   = "10.0.0.0/16"
vpc_cidr_secondary = "10.1.0.0/16"

# Security Configuration (IMPORTANT: Restrict these in production)
allowed_cidr_blocks = ["0.0.0.0/0"]  # Allow access from anywhere - change this for production

# DRS Configuration
enable_drs                   = true
replication_instance_type    = "t3.small"